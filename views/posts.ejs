<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./includes/head') %>
    <link rel="stylesheet" href="/public/styles/allposts.css" />
    <script src="/public/scripts/posts.js" defer></script>
  </head>
  <body>

    <%- include('./includes/header') %>
    <main>
      <div class="container">
        <h1>All Posts</h1>

        <% if (!posts || posts.length==0) { %>
         <p> No posts found but you can creat one</p>
        <% } %>
        <ul class="postlist">
          <% if (posts && posts.length>0) { %>
            <% posts.forEach(post => { %>
              <%- include('./includes/postcard',{post:post}) %>
            <% }) %>
          <% } %>            
        </ul>
      </div>

      <aside>
        <div>
            <h1>
                Are you sure you want to delete this?
            </h1>

            <ul>
                <li><a href="">Yes</a></li>
                <li><a href="">No</a></li>
            </ul>
        </div>
      </aside>
    </main>

  </body>
</html>
