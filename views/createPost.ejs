<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./includes/head') %>
    <link rel="stylesheet" href="/public/styles/createpost.css">
    <script src="/public/scripts/createpost.js" defer></script>
    <script src="/public/scripts/md.js" defer></script>
</head>
<body>
    <%- include('./includes/header') %> 

    <main class="container">
        <h1>Create Post</h1>
        <form id="form" action="/createpost" method="POST" >
            <label for="auther"> Post Auther </label>
            <select name="auther" id="auther" required>
                <% authers.forEach(auther => { %>
                 <option value=<%= auther._id %>><%= auther.name %></option>
                <% }) %>
            </select>
            <label for="title">Title</label>
            <input type="text" name="title" id="title" required>
            <label for="summary">Summary</label>
            <textarea name="summary" id="summary" cols="70" rows="7" required></textarea>
            <label for="content">Content</label> 
            <textarea name="content" id="content" cols="70" rows="21" required></textarea>
            <md-block></md-block>
            <a href=""> preveiw</a>
            <input type="submit" value="Submit">
        </form>
    </main>
</body>
</html>